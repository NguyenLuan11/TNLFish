@using TNLFish.Models
@model List<Giohang>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header Start -->
<div id="cart" class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">GIỎ HÀNG</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a href="@Url.Action("Index", "Home")">Home</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Giỏ hàng</p>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Cart Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th colspan="2">Sản phẩm</th>
                        <th>Giá</th>
                        <th>Chi tiết</th>
                        <th>Số lượng</th>
                        <th>Tổng</th>
                        <th>Cập nhật</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle"><img src="~/img/@item.sImage" alt="" style="width: 50px;"></td>
                            <td class="align-middle">@item.sfish_name</td>
                            <td class="align-middle">@String.Format("{0:0,0}", item.dDongia)</td>
                            <td class="align-middle">
                                <a href="@Url.Action("Detail", "Buy", new { id = item.iID })" class="btn btn-sm text-dark p-0">
                                    <i class="fas fa-eye text-success mr-1"></i>
                                </a>
                            </td>
                            @using (Html.BeginForm("CapnhatGiohang", "Cart", new { @iMasp = item.iID }))
                            {
                                <td class="align-middle">
                                    <div class="input-group quantity mx-auto" style="width: 100px;">
                                        <div class="input-group-btn">
                                            <button class="btn btn-sm btn-warning btn-minus">
                                                <i class="fa fa-minus"></i>
                                            </button>
                                        </div>
                                        <input type="text" class="form-control form-control-sm bg-secondary text-center" name="txtSoluong" value="@item.iSoluong">
                                        <div class="input-group-btn">
                                            <button class="btn btn-sm btn-info btn-plus">
                                                <i class="fa fa-plus"></i>
                                            </button>
                                        </div>
                                    </div>
                                </td>
                                <td class="align-middle">@String.Format("{0:0,0}", item.dThanhtien)</td>
                                <td class="align-middle">
                                    <button class="btn btn-sm btn-success btn-plus">
                                        <i class="fa fa-check"></i>
                                    </button>
                                </td>
                                <td class="align-middle">
                                    <a href="@Url.Action("XoaGiohang", "Cart", new { @iMasp = item.iID })" class="btn btn-sm btn-danger">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </td>
                            }
                        </tr>
                    }
                    <tr style="text-align:right;">
                        <td colspan="8">
                            <a href="@Url.Action("XoatatcaGiohang", "Cart")" class="btn btn-sm btn-danger">
                                Xoá Giỏ Hàng
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <form class="mb-5" action="">
                <div class="input-group">
                    <input type="text" class="form-control p-4" placeholder="Mã khuyến mãi">
                    <div class="input-group-append">
                        <button class="btn btn-danger">Áp dụng mã</button>
                    </div>
                </div>
            </form>
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Tóm tắt giỏ hàng</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3 pt-1">
                        <h6 class="font-weight-medium">Số lượng cá</h6>
                        <h6 class="font-weight-medium">@ViewBag.TongSoLuong</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Phí vận chuyển</h6>
                        <h6 class="font-weight-medium">0</h6>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <div class="d-flex justify-content-between mt-2">
                        <h5 class="font-weight-bold">Tổng tiền</h5>
                        <h5 class="font-weight-bold">@String.Format("{0:0,0}", ViewBag.TongTien) VNĐ</h5>
                    </div>
                    <a href="@Url.Action("DatHang", "Cart")/#DatHang" class="btn btn-block btn-danger my-3 py-3">
                        Đặt hàng
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->