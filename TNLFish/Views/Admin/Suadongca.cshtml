@model TNLFish.Models.dong_ca

@{
    ViewBag.Title = "Sửa dòng cá";
    Layout = "~/Views/Shared/_Layout Admin.cshtml";
}

<h2>CHỈNH SỬA THÔNG TIN DÒNG CÁ</h2>

@using (Html.BeginForm("Suadongca", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="control-label col-md-2">Mã cá</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaCa, new { htmlAttributes = new { @class = "form-control", @name = "MaCa", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.MaCa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Tên dòng cá</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenDongCa, new { htmlAttributes = new { @class = "form-control", @name = "TenDongCa" } })
                @Html.ValidationMessageFor(model => model.TenDongCa, "", new { @class = "text-danger" })
                @ViewData["Loi1"]
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-warning" />
                <a class="btn btn-default" href="@Url.Action("QLdongca", "Admin")">Trở về</a>
            </div>
        </div>
    </div>
}
